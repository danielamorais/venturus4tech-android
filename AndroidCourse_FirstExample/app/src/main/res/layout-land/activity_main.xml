<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/marshmallow_image"
        android:layout_width="@dimen/marsmallow_width"
        android:layout_height="@dimen/marsmallow_height"
        android:layout_below="@id/countLikes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/marshmallow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Love Marshmallow"
        android:textSize="30dp"
        android:textColor="#b40f0f"
        android:layout_marginTop="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="like"
        android:layout_marginTop="160dp"
        android:id="@+id/likeButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/likeCount"
        android:id="@+id/countLikes"
        android:layout_marginTop="100dp" />
</LinearLayout>